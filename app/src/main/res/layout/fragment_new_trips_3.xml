<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    android:layoutAnimation="@null"
    tools:viewBindingIgnore="false"

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traveler Categories"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/travelerCategoriesChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/adultsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adults"
            android:checked="true"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/kidsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kids"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/infantsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infants"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/seniorsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seniors"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Requirements"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/specialRequirementsChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/medicationsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medications"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/techGearChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Gear"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/babyEssentialsChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby Essentials"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/petSuppliesChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Supplies"
            style="@style/Widget.MaterialComponents.Chip.Filter"/>
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>